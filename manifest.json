{
  "manifest_version": 3,
  "name": "LocalStorage Tool",
  "version": "1.0.0",
  "description": "Professional localStorage viewer and manager for developers",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LocalStorage Tool"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
  